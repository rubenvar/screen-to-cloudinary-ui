body
  width: 100%
  min-height: 100%
  height: 100vh
  margin: 0
  padding: 0
  display: grid
  align-items: center
  justify-items: center
  font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, Oxygen, Ubuntu, Cantarell, "Open Sans", "Helvetica Neue", sans-serif

form
  background: palevioletred
  border-radius: 8px
  width: 768px
  display: flex
  flex-wrap: wrap
  gap: 20px
  padding: 20px
  label
    width: 100%
    display: grid
    grid-template-columns: 1fr 3fr
    align-items: center
    color: white
  input
    font-family: inherit
    font-size: inherit
    padding: 6px
    border-radius: 3px
    box-shadow: none
    border: 1px solid maroon
  button
    font-family: inherit
    font-size: inherit
    padding: 12px
    width: 50%
    border: none
    box-shadow: none
    border-radius: 6px
    margin: 16px auto 0
    cursor: pointer
    transition: all 0.3s
    border: 2px solid palevioletred
    background-color: white
    &:hover
      background-color: palevioletred
      border-color: white